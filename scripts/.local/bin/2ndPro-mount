#!/bin/bash
# Mount 2ndPro NTFS drive

MOUNT_POINT="/run/media/taubut/2ndPro"

if mountpoint -q "$MOUNT_POINT" 2>/dev/null; then
    echo "2ndPro is already mounted at $MOUNT_POINT"
    exit 0
fi

sudo mkdir -p "$MOUNT_POINT"
sudo mount -t ntfs-3g /dev/nvme1n1p2 "$MOUNT_POINT"

if mountpoint -q "$MOUNT_POINT"; then
    echo "2ndPro mounted successfully at $MOUNT_POINT"
else
    echo "Failed to mount 2ndPro"
    exit 1
fi
